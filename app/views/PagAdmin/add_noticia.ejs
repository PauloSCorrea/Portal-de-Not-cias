<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <title>Document</title>
    </head>
    <body>
        <h1>Formalario de novas noticia</h1>

        <% if (validacao) { %>
            <ul>
                <% for (var i=0; i<validacao.length; i++) { %>
                    <li>
                        <%=  validacao[i].msg %>
                    </li>
                <% } %>
            </ul>
        <% } %>
        <br>
        <form action="/noticias/salvar" method="post">
            <label> Título </label>
            <input type="text" id="titulo" name="titulo" value="<%= noticia.titulo %>" placehorder="Título da Notícia">
            <br>
            <label>Resumo</label>
            <input type="text" id="resumo" name="resumo" value="<%= noticia.resumo %>" placehorder="Resumo da Notícia">
            <br>
            <label>Autor da notícia</label>
            <input type="text" id="autor" name="autor" value="<%=noticia.autor%>" placehorder="Autor da Notícia">
            <br>
            <label>Data da notícia</label>
            <input type="date" id="data_noticia" name="data_noticia" value="<%=noticia.data_noticia%>" placehorder="Data da Notícia">
            <br>
            <label> Notícia </label>
            <textarea id="noticia" name="noticia" rows="5" cols="30"><%=noticia.noticia%></textarea>
            <br>
            <input type="submit" value="Enviar">
        </form>
    </body>
</html>